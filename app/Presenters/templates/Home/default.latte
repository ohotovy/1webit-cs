{block content}
    Products for {$basketId}

	<div>
		<form n:name=searchForm>
            <input n:name=search_query>
            <input n:name=send value="Search">
        </form>
	</div>

    <div n:foreach="$products as $product">
        <p>{$product->getName()}</p>
		<p>{$product->getShortDescription()}</p>
        <form n:name=addToBasketForm>
            <input n:name=product_id value={$product->getId()}>
            <input n:name=qty value="1">
            <input n:name=send value="Add to Basket">
        </form>
    </div>

{/block}
