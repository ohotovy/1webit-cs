{block content}
	<h1>My blog</h1>

	<h4><a n:href="Edit:create">Write new post</a></h4>

	<div n:foreach="$posts as $post" class="post">
		<h2><a n:href="Post:show $post->id">{$post->title}</a></h2>

		<div>{$post->text}</div>

		<div>{$post->created_at|date:'j.n.Y'}</div>

		<div><a n:href="Edit:edit $post->id">Edit</a></div>
	</div>
{/block}
