{block content}

    <p><a n:href="Home:default">Back</a></p>

    <h3 n:block="title">{$post->title}</h3>

    <p>{$post->text}</h3>

    <hr>

    <h2>Post new comment</h2>

    {control commentForm}

    <hr>

    <div n:foreach="$comments as $comment">
        <p>{$comment->content}</p>
        <p>- by <a href="mailto:{$comment->email}" n:tag-if="$comment->email">{$comment->name}</a></p>
    </div>


{/block}